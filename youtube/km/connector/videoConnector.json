{
  "$id": "videoConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v1",
  "displayName": "YouTube API Connector",
  "entityType": "ce_Video",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "https://www.googleapis.com/youtube/v3/search",
        "authentication": {
          "apiKey": {
            "key": "key",
            "value": "${{API_Key}}",
            "setAsHeader": false
          }
        },
        "paginationControl": {
          "cursorPagination": {
            "pageKey": "pageToken",
            "cursor": "nextPageToken",
            "cursorType": "TOKEN",
            "detectCursorInHeader": false
          }
        },
        "headers": {},
        "queryParams": {
          "channelId": "${{channel_id}}",
          "part": "snippet",
          "type": "video"
        },
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "item",
      "path": "items"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Video ID",
        "path": "id.videoId"
      },
      {
        "type": "JSON",
        "header": "Video ID 2",
        "path": "id.videoId"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "snippet.title"
      },
      {
        "type": "JSON",
        "header": "Description",
        "path": "snippet.description"
      },
      {
        "type": "JSON",
        "header": "Thumbnail URL",
        "path": "snippet.thumbnails.default.url"
      },
      {
        "type": "JSON",
        "header": "Published At",
        "path": "snippet.publishedAt"
      },
      {
        "type": "JSON",
        "header": "Channel ID",
        "path": "snippet.channelId"
      }
    ]
  },
   "transforms": [
    {
      "findAndReplace": {
        "inputHeaders": {
          "headers": [
            "Name",
            "Description"
          ]
        },
        "valueToFind": {
          "plainText": {
            "value": "\u0026#39;",
            "ignoreCase": false
          }
        },
        "replacement": "\u0027"
      }
    },
    {
      "function": {
        "inputHeaders": {
          "headers": [
            "Video ID 2"
          ]
        },
        "plugin": "youtubeURL",
        "function": "generateUrl"
      }
    }
  ],
  "mappings": [
    {
      "field": "yext/entityId",
      "header": "Video ID",
      "subfieldPath": []
    },
    {
      "field": "c_videoURL",
      "header": "Video ID 2",
      "subfieldPath": []
    },
    {
      "field": "yext/name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "yext/description",
      "header": "Description",
      "subfieldPath": []
    },
    {
      "field": "c_thumbnailPhoto",
      "header": "Thumbnail URL",
      "subfieldPath": [
        {
          "name": "url"
        }
      ]
    },
    {
      "field": "c_publishedAt",
      "header": "Published At",
      "subfieldPath": []
    },
    {
      "field": "c_channelID",
      "header": "Channel ID",
      "subfieldPath": []
    }
  ]
}
